
<link href="/assets/login.css" media="screen" rel="stylesheet" type="text/css" />
<div id="container_for_login">
    <div id="header_for_login">
        <%= image_tag("logo-beta.jpg", :alt => "logo", 'class' => "style_image_for_login") %>
    </div>

    <div id="error_for_login">
        <% if (alert.nil? and notice.nil?)%>

        <% else if alert.nil?%>
            <div class="alert alert-success" style="margin:0px; width:auto;text-align: center;">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <h4 ><%= notice %></h4>
            </div> 
            <% else%>
                <div class="alert alert-error" style="margin:0px; width:auto; text-align: center;">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <h4 ><%= alert %></h4>
                </div> 
            <% end%>
        <% end%> 
    </div> 

    <div id="inner_container_for_login">
        <div id="login_form">
            <div id="sign_in">
                <h2>Sign in</h2>
            </div>
            <div id="qlink">
                <i>Q-Link</i>
            </div>
            
            <div id="inner_login_form">
                    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
                     Email
                     <%= f.email_field :email, {:class=>"input-xlarge"}%>
                            
                    Password                             
                    <%= f.password_field :password,{:class => "input-xlarge"}%>
            </div>  
                   <div id="login_form_checkbox">       
                        <% if devise_mapping.rememberable? -%>
                            
                                    <%= f.check_box :remember_me %>
                                    <%=f.label :remember_me%>
                               
                        <% end -%>  
                    </div> 
                
                    <div id="btnSign_in">
                    </br>
                        <%= f.submit "Sign in", 'class'=>"btn btn-primary", 'id'=>'submit_button' %>
                
                    </div>

                    <div id="btnGoogle">
                    
                         <%= link_to image_tag("sign-in.png"), user_omniauth_authorize_path(:google_oauth2), :method => "get" %>
                    </div>
                    <% end %>
        
        </div>

           


        <div id="about_for_login">
            <h4> Sign in and start sharing with Q-Link</h4>
            </br>
            <h5>
            <%= image_tag("share_icon.png", :alt => "icon") %>
            &nbsp &nbspShare whats in your mind with Friends
            </h5>
           
            <h5>
            <%= image_tag("blog_icon.png", :alt => "icon") %>
            &nbsp &nbspView and Share your Blogs
            </h5>
            
            <h5>
            <%= image_tag("photo_icon.png", :alt => "icon") %>
            &nbsp &nbspShare photos and videos with Friends
            </h5>

            <h5>
            <%= image_tag("events_icon.png", :alt => "icon") %>
            &nbsp &nbspOrganize and create events
            </h5>

            <h5>
            <%= image_tag("question_icon.png", :alt => "icon") %>
            &nbsp &nbspAsk Questions and take part in Discussions.
            </h5>

        </div>

        
        

    </div>
    
    <div id="footer_for_login">
        <p>Copyright Â© 2013 Q-Link RoR Team @ QBurst 2013</p>
    </div>
</div>

